{{page-title "Form"}}
<h1> Add Todo </h1>

<form class="card">
    <label for="title">Title</label>
    <Input @type="text" @value={{this.title}} id="title"/>
    <label for="description">Description</label>
    <Input @type="text" @value={{this.description}} id="description"/>
    <button type="button" {{on "click" this.addTodo}}>Add Todo</button>
</form>

<br>
<LinkTo @route="index">See Todos</LinkTo> 